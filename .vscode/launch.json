{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "vuejs: chrome",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:5173/",
            "webRoot": "${workspaceFolder}",
            // See https://stackoverflow.com/a/55505708
            // You must first quit all running instances of Chrome, 
            // because it's not possible to put a running Chrome user profile into debug mode
            "userDataDir": false
        },
        {
            "name": "NPM dev",
            "type": "node-terminal",
            "request": "launch",
            "command": "npm run dev"
        }
    ],
    "compounds": [
        {
            "name": "Debug",
            "configurations": ["NPM dev", "vuejs: chrome"],
            "stopAll": true
        }
    ]
}